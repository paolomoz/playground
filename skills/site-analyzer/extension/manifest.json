{
  "manifest_version": 3,
  "name": "Site Analyzer â€” EDS Migration",
  "version": "1.0.0",
  "description": "Capture multi-modal site analysis for AEM Edge Delivery Services migration",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "offscreen",
    "sidePanel",
    "webNavigation",
    "downloads",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/constants.js",
        "shared/utils.js",
        "content-script/modules/overlay.js",
        "content-script/modules/selector.js",
        "content-script/modules/dom-landmarks.js",
        "content-script/modules/page-metadata.js",
        "content-script/content.js"
      ],
      "css": ["content-script/content.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "side-panel/panel.html"
  },
  "action": {
    "default_title": "Site Analyzer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
